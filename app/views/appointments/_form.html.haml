= simple_form_for appointment, :remote => true, :format => :js do |f|
  = f.association :services, :as => :check_boxes, :collection => worker.services.where(:show_by_owner => !!current_user.owner_or_worker?(@organization)).not_collections.order(:name)
  = f.submit 'Изменить', :class => 'btn'
  = link_to 'Отменить', '#', :class => 'btn close_popover', 'data-id' => appointment.id
