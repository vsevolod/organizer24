- content_for :header_title do
  %h2 Редактирование организации

- @organization.user_notify_text = USER_NOTIFY if @organization.user_notify_text.blank?
= simple_form_for @organization do |f|
  %h3 Основное
  = f.input :activity_id, :collection => @activities, :include_blank => false, :label => false
  = f.input :name
  = f.input :domain
  = render 'configuration', f: f

  = f.submit :class => 'btn btn-primary'
