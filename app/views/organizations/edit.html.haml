- content_for :header_title do
  %h2 Редактирование организации

= simple_form_for @organization do |f|
  %h3 Основное
  = f.input :activity_id, :collection => @activities, :include_blank => false, :label => false
  = f.input :name
  = f.input :subdomain

  %h3 Шаг календаря
  = f.collection_radio_buttons :slot_minutes, [[5,'5 минут'],[10,'10 минут'],[15,'15 минут'],[20,'20 минут'],[30,'пол часа'],[60,'час']], :first, :last

  %h3 Последний день записи
  = f.collection_radio_buttons :last_day, [[0, 'В тот же день'],[1,'За день'],[2,'За два дня'],[3,'За три дня'],[4,'За четыре дня']], :first, :last

  %h3 Часы работы
  = render 'devise/registrations/working_hours_list', :f => f

  = f.submit
