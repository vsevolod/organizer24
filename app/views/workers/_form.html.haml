= content_for :bottom_js do
  = javascript_include_tag 'fullcalendar', 'month_calendar'

#worker
  = simple_form_for @worker do |f|
    = f.input :is_enabled
    = f.input :name
    = f.input :phone
    = f.input :photo, :as => :file
    -#= f.simple_fields_for :services_workers do |sw|
    -#  = render 'services_worker_fields', :f => sw
    %h3 Список сервисов
    #collections.controls
      - @organization.services.not_collections.each do |service|
        %label.checkbox
          = check_box_tag "worker[service_ids][]", service.id, @worker.services.include?( service )
          = service.name
    .links= link_to_add_association 'Добавить услугу', f, :services_workers, :class => 'btn btn-success'
    - unless @worker.new_record?
      %h1 Рабочие дни
      #worker_month_calendar{:style => 'width:500px;'}
    .form-actions
      = f.submit "Завершить", :class => 'btn btn-primary'
