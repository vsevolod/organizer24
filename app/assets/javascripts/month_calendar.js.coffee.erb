$('#month_calendar').fullCalendar({
  contentHeight: 'auto',
  firstDay: 1,
  aspectRatio: 1.5,
  defaultView: 'month',
  allDaySlot: false,
  allDayDefault: false,
  axisFormat: 'HH:mm',
  eventLimit: 4,
  timeFormat: {
    agenda: 'H:mm{ - H:mm}',
    '': 'H(:mm)'
  },
  columnFormat: {
    week: "dd.MM.yyyy '<br/>' dddd",
  },
  titleFormat: {
    week: "MMMM d[ yyyy]{ '&#8212;'[ MMMM] d yyyy"
  },
  buttonText: {
    today: 'Сегодня'
  },
  eventSources: [
    {
      url: '/working_hours/self_by_month',
      borderColor: '#ccc'
    }
  ],
  dayClick: (date, allDay, jsEvent, view) ->
    window.location.href = '/calendar?day='+Number(date)/1000
  eventClick: (event, jsEvent, view) ->
    console.log( event )
    window.location.href = '/calendar?day='+Number(event.start)/1000
  eventRender: (event, element) ->
    element.find('.fc-title').html(element.find('.fc-title').text())
    element
})

$('#worker_month_calendar').fullCalendar({
  monthNames: <%= I18n.t('date.standalone_month_names').compact %>,
  monthNamesShort: <%= I18n.t('date.standalone_abbr_month_names').compact %>,
  dayNames: <%= I18n.t('date.standalone_day_names').compact %>,
  dayNamesShort: <%= I18n.t('date.standalone_abbr_day_names').compact.map{|x| x.mb_chars.capitalize.to_s} %>,
  firstDay: 1,
  aspectRatio: 1.5,
  defaultView: 'month',
  allDaySlot: false,
  allDayDefault: false,
  axisFormat: 'HH:mm',
  timeFormat: {
    agenda: 'H:mm{ - H:mm}',
    '': 'H(:mm)'
  },
  columnFormat: {
    week: "dd.MM.yyyy '<br/>' dddd",
  },
  titleFormat: {
    week: "MMMM d[ yyyy]{ '&#8212;'[ MMMM] d yyyy"
  },
  buttonText: {
    today: 'Сегодня'
  },
  eventSources: [
    {
      url: 'working_days',
      borderColor: '#ccc'
    }
  ],
  dayClick: (date, allDay, jsEvent, view) ->
    $.post('working_days/inverse_day', { start: date.getTime()/1000 }, (data)->
      $('#worker_month_calendar').fullCalendar('refetchEvents')
    )
  eventClick: (event, jsEvent, view) ->
    $.post('working_days/inverse_day', { start: event.start.getTime()/1000 }, (data)->
      $('#worker_month_calendar').fullCalendar('refetchEvents')
    )
})
